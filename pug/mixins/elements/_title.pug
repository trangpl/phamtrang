mixin title-center(title)
	h3.title-center= title
	+divider-center()

mixin title-left(title)
	h3.title-left= title
	+divider-left()
mixin _title(content)
	h3.title-left= content.title
	if content.schedule && content.post
		small.time__schedule
			i.far.fa-calendar-alt
			=content.schedule
	if content.post
		small.time__post
			i.fas.fa-pen-square
			=content.post
	+divider-left()

mixin title-sidebar(title)
	h4.title-left= title
	+divider-left()

